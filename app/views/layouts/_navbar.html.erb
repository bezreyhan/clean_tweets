<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Clean Tweets</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">

        <!-- greet user if they are signed in -->
        <% unless current_user == nil %>
          <li><a>Hi <%= current_user.name %></a></li>
        <% end %>

        <!-- if on users/new or auths/new show login or signup button -->
        <% if params[:controller] == "auths" || params[:controller] == "users" %>
          <li><%=link_to get_page, get_route, class:"btn navbar_login" %></li>
        <% end %>

        <!-- if called from fav_tweets controller show multiple options -->
        <% if params[:controller] == "fav_tweets" %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Options<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% if params[:action] == "favorites" %>
                  <li><%=link_to "Clean Tweets", show_tweets_path %></li>
                <% else %>
                  <li><%=link_to "Favorites", favorites_fav_tweet_path %></li>
                <% end %>  
                <li class="divider"></li>   
                <li><%= link_to "Log Out", auths_path, method: 'delete' %></li>
              </ul>
          </li>    
        <% end %>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>