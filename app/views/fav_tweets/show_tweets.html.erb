
<%= render "layouts/navbar" %>

<%#= "hello" link_to "hi", "http://www.heatandcoolaz.com" %> 
<div class="container-fluid show_tweets_container">
	<div class="row">
		<div class="col-md-3 col-sm-3 col-xs-1"></div>
		<div class="col-md-6 col-sm-6 col-xs-10 time_line">
			<% @sorted_tweets.each do |tweet| %>

				<div class="tweet_shell">
					<div class="tweet">
						<div class="user_name"><%=link_to "@"+tweet.user.user_name, "http://www.twitter.com/" + tweet.user.user_name, class:'user_name' %> </div>
						<div>
							<%= link_to raw("<span class='glyphicon glyphicon-heart-empty'></span>"), create_fav_tweet_path(tweet.id), method: 'post', class:'btn_favorite' %>
						</div>	
						<div> <%= tweet.attrs.rank %> </div>
						<div class="text"> <%= raw(add_link(tweet.text)) %> </div>
					</div>
				</div>
					
			<% end %>
		</div>
		<div class="col-md-3 col-sm-3 col-xs-1"></div>
	</div>	
</div>





