<h1>Index of All Clean Tweet Users</h1>
<p id='notice'> <%= notice %></p>

<table>
	<tr>
		<th>Name</th>
		<th>Username</th>
		<th>Email</th>
		<th>Edit</th>
	</tr>
	<% @users.each do |u| %>
	<tr>
		<td> <%= u.name %> </td>
		<td> <%= u.username %> </td>
		<td> <%= u.email %> </td>
		<td> <%= link_to "Edit", edit_user_path(u) %> </td>
		<td> <%= link_to "Delete", user_path(u), method: 'delete' %> </td>
	</tr>
	<% end %>
</table>

<br />
<br />
<br />

<%= button_to "Log Out", auths_path, method: 'delete' %>


